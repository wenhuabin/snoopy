/**form.wxss**/

.title{
    margin-top: 45px;
    margin-bottom: 30px;
    font-size: 18px;
    text-align: center;
    color: #444;
}

view{
    margin: 15px auto;
    width: 80%;

}

button{
    margin: 15px auto;
    width: 80%;
}

.button-hover {
  background-color: red;
}

.other-button-hover {
  background-color: blue;
}

.radio-group,
.checkbox-group{
  margin: 30px auto;
  width: 80%;
}

.radio,
.checkbox{
  display: inline-block;
  margin: 5px;
}

.label-1, .label-2{
    margin: 0 0 15px 0;
}
.label-1__text, .label-2__text {
    display: inline-block;
    vertical-align: middle;
}

.label-1__icon {
    position: relative;
    margin-right: 10px;
    display: inline-block;
    vertical-align: middle;
    width: 18px;
    height: 18px;
    background: #f5f5f5;
}

.label-1__icon-checked {
    position: absolute;
    margin: 0;
    top: 3px;
    left: 3px;
    width: 12px;
    height: 12px;
    background: #1aad19;
}


.label-2__icon {
    position: relative;
    display: inline-block;
    vertical-align: middle;
    margin-right: 10px;
    width: 18px;
    height: 18px;
    background: #f5f5f5;
    border-radius: 50px;
}

.label-2__icon-checked {
    position: absolute;
    margin: 0;
    left: 3px;
    top: 3px;
    width: 12px;
    height: 12px;
    background: #1aad19;
    border-radius: 50%;
}

.label-4_text{
    text-align: center;
    margin-top: 15px;
}
